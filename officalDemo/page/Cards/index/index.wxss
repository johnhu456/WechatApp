
.header{
    width:100%;
    position:relative;
    height:2.082rem;
    background-color: #F2F2F2;
}
.menu{
    width:16.5%;
    height:2.127rem;
    line-height: 2.127rem;
    float:left;
    text-align: center;
    font-size: 1.5rem;
    color: #686868;
    position: absolute;
    right: 0;
    top: 0;
    background-color: #F2F2F2;
}
.search_logoo{
    width: 10%;
    height: 1.4rem;
    background: url(image/record.png) no-repeat center;
    background-size: 80%;
    background-color: red;
    position: absolute;
    left: 5%;
    top: 0.3rem;
    z-index: 55;
}
input{
    position: absolute;
    top: 0.3rem;
    left: 5%;
    width: 65%;
    border-radius: 10px;
    border: 1px solid #e1e1e1;
    background: #ccc;
    padding-left: 8%;
    font-size: 12px;
    color: #f3f3f3;
}

.card_action_sheet{
    height:60%;
    width:100%;
    float:bottom;
}

.top_menu_button
{
    margin-top:0.3rem; 
    float:left;
    width:25%;
    height:5rem;
}

.top_menu_radius{
    width: 3rem;
    height:3rem;
    display: block;
    border-left: 3%;
    box-sizing:border-box;
    margin:auto;
}

.txt{
    height: 1.5rem;
    text-align: center;
    display: block;
    width:100%;
    margin:auto;
    font-size:1rem;
}